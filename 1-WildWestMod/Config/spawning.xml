<wildwestmod>

	<!-- respawndelay: game days - .000278 real seconds, .0167 mins -->

	<set xpath="/spawning/biome[@name='wasteland']">
		<spawn maxcount="1" respawndelay="0.3" time="Day"	entitygroup="ZombiesWasteland" notags="commercial,industrial,downtown" />
		<spawn maxcount="2" respawndelay="0.01" time="Night" entitygroup="ZombiesWastelandNight" notags="commercial,industrial,downtown" /> <!-- Default 0.001 -->

		<spawn maxcount="4" respawndelay="0.033" time="Day" entitygroup="ZombiesWasteland" tags="commercial,industrial" notags="downtown" />
		<spawn maxcount="4" respawndelay="0.01" time="Night" entitygroup="ZombiesWastelandNight" tags="commercial,industrial" notags="downtown" /> <!-- Default 0.002 -->

		<spawn maxcount="4" respawndelay="0.0167" time="Day" entitygroup="ZombiesWastelandDowntown" tags="downtown" />
		<spawn maxcount="4" respawndelay="0.002" time="Night" entitygroup="ZombiesWastelandDowntown" tags="downtown" />

		<spawn maxcount="1" respawndelay="0.3" time="Any" entitygroup="EnemyAnimalsWasteland" spawnDeadChance="0" />
	</set>
	
	<append xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='ZombiesAll']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='ZombiesNight']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='ZombiesForestDowntown']/@tags">,oldwest</append>
	<append xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='ZombiesForestDowntownNight']/@tags">,oldwest</append>
	
	<append xpath="/spawning/biome[@name='burnt_forest']/spawn[@entitygroup='ZombiesAll']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='burnt_forest']/spawn[@entitygroup='ZombiesNight']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='burnt_forest']/spawn[@entitygroup='ZombiesDowntown']/@tags">,oldwest</append>
	
	<append xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='ZombiesAll']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='ZombiesNight']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='ZombiesDowntown']/@tags">,oldwest</append>
	
	<append xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='SnowZombies']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='ZombiesNight']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='ZombiesAll']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='ZombiesDowntown']/@tags">,oldwest</append>
	
	<append xpath="/spawning/biome[@name='wasteland']/spawn[@entitygroup='ZombiesWasteland']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='wasteland']/spawn[@entitygroup='ZombiesWastelandNight']/@notags">,oldwest</append>
	<append xpath="/spawning/biome[@name='wasteland']/spawn[@entitygroup='ZombiesWastelandDowntown']/@tags">,oldwest</append>	

</wildwestmod>