<configs>
	<append xpath="/twitch">
	
	<!-- Group Animals -->
	
	<action name="twitch_groupTerritorialBisons">
		<property name="command" value="#group_bisons" />
		<property name="command_key" value="TwitchAction_SpawnGroupTerritorialBisonsCommand" />
